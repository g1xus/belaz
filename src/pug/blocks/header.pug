mixin header
    header.header
        .container
            .row.align-items-center
                .col-xl-5.col-lg-3.col-sm-5.col-12
                    .header-logo
                        a(href='#')
                            img(src='img/logo.png' alt='Eddies-Car')
                .col-xl-3.col-lg-3.col-sm-3.col-6
                    .header-info
                        .row
                            .header-info__time
                                | c 9:00 до 21:00
